{
  "TokenValidation": {
    "Enabled": false,
    "Audiences": [
      "{{ClientId}}" // this is the Client ID used for the Azure Bot
    ],
    "TenantId": "{{TenantId}}"
  },

  "AgentApplication": {
    "StartTypingTimer": true,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false,

    "UserAuthorization": {
      "AutoSignIn": true,
      "Handlers": {
        "mcs": {
          "Settings": {
            "AzureBotOAuthConnectionName": "{{AzureBotOAuthConnectionName}}",
            "OBOConnectionName": "ServiceConnection" // OBOScopes are resolved at runtime
          }
        }
      }
    }
  },

  "CopilotStudioAgent": {
    "EnvironmentId": null,
    "SchemaName": null
  },

  "Connections": {
    "ServiceConnection": {
      "Settings": {
        // this is the AuthType for the connection, valid values can be found in Microsoft.Agents.Authentication.Msal.Model.AuthTypes.  The default is ClientSecret.
        "AuthType": "" 

        // Other properties dependent on the authorization type the Azure Bot uses.
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
