{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.23/MicrosoftTeams.schema.json",
    "manifestVersion": "1.23",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Cards Agent",
        "websiteUrl": "https://www.microsoft.com",
        "privacyUrl": "https://www.teams.com/privacy",
        "termsOfUseUrl": "https://www.teams.com/termsofuser"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Cards Agent",
        "full": "Cards Agent Sample"
    },
    "description": {
        "short": "Node.js sample app demonstrating various card types in Microsoft Teams.",
        "full": "This sample app showcases a Node.js bot that demonstrates various card types including Adaptive Card, Hero Card, Thumbnail Card, Animation Card, Audio Card, Video Card, and Receipt Card."
    },
    "accentColor": "#FFFFFF",
    "copilotAgents": {
        "customEngineAgents": [
            {
                "type": "bot",
                "id": "${{AAD_APP_CLIENT_ID}}"
            }
        ]
    },
    "bots": [
        {
            "botId": "${{AAD_APP_CLIENT_ID}}",
            "scopes": [
                "copilot",
                "personal",
                "team",
                "groupChat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal",
                        "team",
                        "groupChat"
                    ],
                    "commands": [
                        {
                            "title": "Display cards options",
                            "description": "Display all available card types"
                        }
                    ]
                }
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{BOT_DOMAIN}}"
    ]
}